---
import Layout from "../layouts/Layout.astro";
---

<Layout title="Page Not Found - 404">
  <div class="flex flex-col items-center justify-center min-h-[70vh] text-center px-4">
    <h1 class="text-5xl font-bold text-gray-800 mb-4">404</h1>
    <p class="text-2xl text-gray-600 mb-8">Page Not Found</p>
    <p class="text-lg text-gray-500 max-w-lg mb-8">
      Sorry, the page you requested does not exist or has been removed.
    </p>
    <a
      href="/"
      class="bg-blue-600 hover:bg-blue-700 text-white font-bold py-2 px-6 rounded-lg transition-colors"
    >
      Back to Home
    </a>
  </div>
</Layout> 